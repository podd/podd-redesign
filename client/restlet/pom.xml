		<artifactId>podd-client-parent</artifactId>
		<version>0.4-SNAPSHOT</version>
	</parent>
	<artifactId>podd-client-restlet</artifactId>
	<name>PODD :: Client Restlet implementation</name>
	<description>Implementation of the PODD Client API using Restlet</description>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>podd-client-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.restlet.jee</groupId>
